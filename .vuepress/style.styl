body
  background-color #f7fafc !important
  font-family "Nunito", -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, Oxygen, Ubuntu, Cantarell, Fira Sans, Droid Sans, Helvetica Neue, sans-serif !important

p, ul, ol
  line-height: 1.8;

table
  font-size: 0.85rem;

.home .hero img
  margin-bottom 0 !important

.home .hero h1
  margin: 0.2rem auto !important
  font-size: 2.5rem !important

.home .hero .description
  margin: 0.4rem auto !important
  font-size: 1.1rem !important

.home .hero .action-button
  font-size: 1rem !important
  padding: 0.7rem 1.3rem !important

.theme-container
  max-width 75rem
  margin 0 auto;

.navbar
  border none
  box-shadow 0 3px 3px 0 rgba(0, 0, 0, 0.07), 0 4px 9px 0 rgba(0, 0, 0, 0.06)

.navbar-container
  max-width 75rem
  margin 0 auto;
  display flex

.navbar .links
  position relative
  top 0
  right 0

.search-box
  flex 1
  margin-left 3rem
  margin-right 3rem

.search-box input
  width 100%

.algolia-autocomplete
  width 100%

.sidebar
  position relative
  background-color transparent
  border none
  top: 0
  display inline-block
  padding-top 6rem

.sidebar .sidebar-links
  position fixed
  padding 2.5rem 0
  overflow-y auto
  max-height 79vh

.sidebar-heading
  color: #2c3e50 !important

.sidebar-heading.open, .sidebar-heading:hover
  color: #4dc0b5 !important

h4
  font-size: 1.2rem;
  font-weight: bold;

.page
  padding-bottom 0.5rem
  padding-left 16rem
  padding-right 12rem
  margin-bottom 6rem
  position relative

.no-toc .page
  padding-right 0

.content:not(.custom)
  max-width 100%
  margin-bottom 1rem
  background-color white
  border-radius 0.5rem
  box-shadow 0 4px 8px 0 rgba(0, 0, 0, .12), 0 2px 4px 0 rgba(0, 0, 0, .08)

.content:not(.custom) > *:first-child
  margin-top 0 !important
  padding-top 0 !important

.page-edit, .page-nav
  max-width 100%
  padding 0 1.5rem

.page-edit
  padding-bottom 1rem

.page-nav .inner
  border none

  a
    color #56637b

.table-of-contents
  position absolute
  right -5rem
  top 1rem
  width 15rem
  font-size 1rem

.table-of-contents > ul
  margin-top 1rem
  position fixed
  list-style none
  padding-left 0

.table-of-contents > ul ul
  margin-top 0.5rem
  margin-bottom 0.5rem
  list-style none

.table-of-contents li
  margin-bottom 0.5rem

.table-of-contents a
  color #2c3e50
  font-size 0.85rem


@media (max-width: 992px)
  .page
    padding-right 1rem

  .table-of-contents
    position relative
    right 0
    top 0
    width auto
    font-size inherit

  .table-of-contents > ul
    position relative

  .table-of-contents a
    font-size inherit
    color: #4dc0b5

  .sidebar
    background white
    position fixed

  .sidebar .sidebar-links
    position relative
    padding 1rem 0

  .page
    padding-top 4rem
    padding-left 0
    padding-right 0

  .content:not(.custom)
    background-color transparent
    border-radius 0
    box-shadow none